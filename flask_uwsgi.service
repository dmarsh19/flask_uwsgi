[Unit]
Description="uWSGI server instance configured to serve flask_uwsgi"
After=syslog.target

[Service]
ExecStart=/usr/local/bin/uwsgi --ini /var/www/flask_uwsgi/flask_uwsgi.ini
# Requires systemd version 211 or newer
RuntimeDirectory=uwsgi
KillSignal=SIGQUIT
ExecReload=/bin/kill -HUP %MAINPID
ExecStop=/bin/kill -INT $MAINPID
Restart=always
Type=notify
StandardError=syslog
NotifyAccess=all


[Install]
WantedBy=multi-user.target
